<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/p_product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/p_product_name"
            android:layout_below="@+id/p_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/p_product_description"
            android:layout_below="@id/p_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product description"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/p_product_price"
            android:layout_below="@id/p_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Product price"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>