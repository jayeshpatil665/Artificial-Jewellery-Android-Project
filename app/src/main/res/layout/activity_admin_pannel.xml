<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPannelActivity">

    <Button
        android:id="@+id/btnAdminLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="out"
        android:text="Logout"
        android:background="@drawable/input_design"
        android:layout_margin="30dp"
        android:layout_alignParentEnd="true"
        />

    <ImageButton
        android:id="@+id/btnAdminAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdminLogout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/buttons"
        android:onClick="addItemsActicity"
        android:padding="20dp"
        android:src="@drawable/add_pro_vector"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/Admin_simple_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdminLogout"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:text="Add More Products "
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/btnAdminViewOrders"
        android:layout_below="@+id/btnAdminAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:src="@drawable/ic_view_orders"
        android:tint="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Admin_simple_txt"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:text="View Orders"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textSize="25sp" />
</RelativeLayout>